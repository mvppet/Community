<UserControl x:Class="CommunityControlLibrary.Thoughts.BasicSleepThoughtControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CommunityControlLibrary"
			 xmlns:vm="clr-namespace:CommunityViewModels;assembly=CommunityViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
			 Background="CornflowerBlue"
			 >
	<d:UserControl.DataContext>
		<vm:BasicSleepThoughtViewModel/>
	</d:UserControl.DataContext>
	<StackPanel Orientation="Horizontal">
		<Label>Health:</Label>
		<TextBlock Text="{Binding Health}" />
	</StackPanel>
</UserControl>
